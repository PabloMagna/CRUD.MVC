@model MVC_FirstPracticeCRUD.Models.Contact
@{
    ViewData["Title"] = "Contact Delete";
}

<h1 class="text-center">Contact</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Delete Contact</strong></h3>

            </div>
            <div class="card body">
                <form asp-action="Delete" method="post" style="padding:2%">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" readonly class="form-control" placeholder="@Model.Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" readonly class="form-control" placeholder="Enter a email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" readonly class="form-control" placeholder="Enter a phone" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success mx-auto "><i class="bi bi-eraser-fill"></i> Delete Contact</button>
                    </div>
                </form>
                <a asp-controller="home" asp-action="index" class="align-content-center mt-3">Back</a>
            </div>
        </div>
    </div>
</div>
